@model CostManeger.Models.ViewModels.Login.LoginViewModel
@{
    Layout = "_LayoutAuth";
    ViewData["Title"] = "SignIn";
    string? errorLogin = ViewData["ErrorLogin"] as string;
}

<div class="row mb-2 mt-5">
    <div class="col text-center">
        <h1>@ViewData["Title"]</h1>
    </div>
</div>

<div class="row mb-2">
    <div class="offset-md-3 col-md-6">

        @if (!string.IsNullOrEmpty(errorLogin))
        {
            <div class="alert alert-danger text-center" role="alert">
                @errorLogin
            </div>
        }

        @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { autocomplete = "off" }))
        {
            <div class="form-group">
                <label asp-for="Username" class="form-label">Nome de usuário</label>
                <input asp-for=Username type="text" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="form-label">Senha</label>
                <input asp-for=Password type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-controller="User" asp-action="Index" class="btn btn-default">Voltar</a>
            </div>

        }
    </div>
</div>